{
  "name": "Node.js & Eleventy",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {},
  "postCreateCommand": "COREPACK_ENABLE_DOWNLOAD_PROMPT=0 /bin/sh -c 'sudo corepack enable && corepack prepare yarn@4.12.0 --activate && yarn install --immutable'",
  "customizations": {
    "vscode": {
      "extensions": ["html-validate.vscode-html-validate"]
    }
  }
}
